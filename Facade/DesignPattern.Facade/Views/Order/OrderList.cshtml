@model List<DesignPattern.Facade.DAL.Order>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<h1>Order List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Customer</th>
        <th>City</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
            <td>@item.OrderDate</td>
        </tr>
    }
</table>
<a href="/Order/AddNewOrderDetail" class="btn btn-primary">Add New Order Detail</a>
<a href="/Order/AddNewOrder" class="btn btn-success">Add New Order</a>